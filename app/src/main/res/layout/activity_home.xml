<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E9F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_white_bg"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_over"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- TOPO COM FUNDO AZUL E CABEÇALHO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_top_blue_bg"
            android:backgroundTint="#1E88E5"
            android:backgroundTintMode="src_over"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Ícone do usuário -->
            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Usuário"
                android:src="@drawable/ic_usuario" />

            <!-- Saudação -->
            <TextView
                android:id="@+id/textSaudacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Olá, seja bem-vindo • nome"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Título principal com detalhe azul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="SmartStock"
            android:textColor="#1E88E5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- BOTÕES PRINCIPAIS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnModoFuncionamento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_blue_border"
                android:text="Como funciona?"
                android:textColor="#1E88E5" />

            <Button
                android:id="@+id/btnAcessarDispensa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_blue_border"
                android:text="Acessar despensa"
                android:textColor="#1E88E5" />
        </LinearLayout>

        <!-- ESCANEAR PRODUTOS -->
        <Button
            android:id="@+id/btnEscanear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_blue_border"
            android:text="Escanear produtos"
            android:textColor="#1E88E5" />

        <!-- BARRA DE PESQUISA -->
        <EditText
            android:id="@+id/editTextBusca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_blue_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="Procure"
            android:padding="12dp" />

        <!-- PLANOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Conheça nossos planos:"
            android:textColor="#1E88E5"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_planoimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Plano Pro\nR$11,90"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnPlano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_blue_border"
            android:text="Quero este!"
            android:textColor="#1E88E5" />

        <!-- ALERTAS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Meus alertas:"
            android:textColor="#1E88E5"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/alerta_rounded_red"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/alertaContadorVencidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nenhum produto vencido"
                    android:textColor="#B71C1C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="confira agora"
                    android:textColor="#B71C1C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/alerta_rounded_yellow"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/alertaProximosVencer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#856404"
                    android:text="Nenhum produto próximo de vencer" />

                <TextView
                    android:id="@+id/alertaBaixoEstoque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#856404"
                    android:text="confira agora" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
