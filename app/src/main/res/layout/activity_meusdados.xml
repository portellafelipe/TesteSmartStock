<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E9F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_white_bg"
        android:elevation="4dp">

        <!-- TOPO AZUL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_top_blue_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_seta_voltar"
                android:contentDescription="Voltar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meus dados"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- NOME -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome de usuário"
            android:textColor="#1E88E5"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu novo nome"
            android:background="@drawable/edittext_blue_background"
            android:padding="12dp"/>

        <!-- EMAIL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="#1E88E5"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altere o email..."
            android:enabled="false"
            android:background="@drawable/edittext_blue_background"
            android:padding="12dp"/>

        <!-- BOTÃO SALVAR -->
        <Button
            android:id="@+id/btnSalvarAlteracoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar alterações"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:backgroundTint="#1E88E5"/>

        <!-- BOTÃO EXCLUIR -->
        <Button
            android:id="@+id/btnExcluirConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir conta"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:backgroundTint="#D90429"/>

    </LinearLayout>

</ScrollView>


